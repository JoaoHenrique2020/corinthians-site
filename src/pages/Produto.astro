---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Produtos - Corinthians">
  <section style="padding:40px; text-align:center;">
    <h2 style="color:white;">Produtos Oficiais do Timão</h2>
    <div style="display:grid; grid-template-columns:repeat(3,1fr); gap:20px; margin-top:30px;">
      
      <figure>
        <img src="https://images.unsplash.com/photo-1606112219348-204d7d8b94ee?ixlib=rb-4.0.3&auto=format&fit=crop&w=900&q=60" alt="Camisa Corinthians 2024" style="width:100%; border-radius:8px;" />
        <figcaption style="margin-top:10px; color:#ccc;">Camisa Oficial Corinthians 2024</figcaption>
      </figure>

      <figure>
        <img src="https://images.unsplash.com/photo-1616469829938-58f97a539e29?ixlib=rb-4.0.3&auto=format&fit=crop&w=900&q=60" alt="Boné Corinthians" style="width:100%; border-radius:8px;" />
        <figcaption style="margin-top:10px; color:#ccc;">Boné Oficial Corinthians</figcaption>
      </figure>

      <figure>
        <img src="https://images.unsplash.com/photo-1605379399642-870262d3d051?ixlib=rb-4.0.3&auto=format&fit=crop&w=900&q=60" alt="Bandeira Corinthians" style="width:100%; border-radius:8px;" />
        <figcaption style="margin-top:10px; color:#ccc;">Bandeira do Corinthians</figcaption>
      </figure>

    </div>
  </section>
</Layout>
