---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Produtos - Corinthians">
  <section style="padding:40px; text-align:center;">
    <h2 style="color:white;">Produtos Oficiais do Timão</h2>
    <div style="display:grid; grid-template-columns:repeat(3,1fr); gap:20px; margin-top:30px;">
      
      <figure>
        <img src="/images/camisa.jpg" alt="Camisa Corinthians" style="width:100%; border-radius:8px;" />
        <figcaption style="margin-top:10px; color:#ccc;">Camisa Oficial Corinthians</figcaption>
      </figure>

      <figure>
        <img src="/images/bone.jpg" alt="Boné Corinthians" style="width:100%; border-radius:8px;" />
        <figcaption style="margin-top:10px; color:#ccc;">Boné Oficial Corinthians</figcaption>
      </figure>

      <figure>
        <img src="/images/bandeira.jpg" alt="Bandeira Corinthians" style="width:100%; border-radius:8px;" />
        <figcaption style="margin-top:10px; color:#ccc;">Bandeira Oficial do Corinthians</figcaption>
      </figure>

    </div>
  </section>
</Layout>
