import Layout from '../layouts/Layout.astro';
---

<Layout title="Galeria - Corinthians">
  <section style="text-align:center; padding: 60px;">
    <h1 style="font-size: 2.5rem; color: black;">Galeria</h1>
    <p style="font-size: 1.1rem; color: #333;">Momentos históricos e a paixão da Fiel torcida.</p>

    <div style="display:grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap:20px; margin-top:40px;">
      <img src="https://via.placeholder.com/300x200" alt="Torcida Corinthiana" style="width:100%; border:2px solid black;"/>
      <img src="https://via.placeholder.com/300x200" alt="Estádio" style="width:100%; border:2px solid black;"/>
      <img src="https://via.placeholder.com/300x200" alt="Título" style="width:100%; border:2px solid black;"/>
    </div>
  </section>
</Layout>
